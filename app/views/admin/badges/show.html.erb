<div class="row justify-content-md-left mt-3 ">
  <div class="col-md-4 mb-3">
    <div class="card">
      <div class="card-header">
        <h1 class="card-title">
          <%= image_tag @badge.image %>
        </h1>
      </div>
      <div class="card-body">
        <%= link_to t('.edit'), edit_admin_badge_path(@badge), class: "btn btn-primary" %> |
        <%= link_to t('.back'), admin_badges_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>

  <div class="col-md-8 mb-3">
    <h3><%= t('admin.badges.index.name') %> </h3>

    <h5>
      <%= @badge.title %>
    </h5>

    <p>
      <strong><%= t('admin.badges.index.rule') %> </strong><%= @badge.rule %>
    </p>

    <p>
      <strong><%= t('admin.badges.index.rule_value') %> </strong><%= @badge.rule_value %>
    </p>
  </div>
</div>
