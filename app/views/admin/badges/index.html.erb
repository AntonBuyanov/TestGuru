<div class="row justify-content-center mt-3">
  <div class="col col-md-10">
    <h1 class="text-center "><%= t('.badges') %></h1>
    <p>
      <%= link_to t('.new'), new_admin_badge_path %>
    </p>

    <%= render 'shared/errors', resource: @badge %>

    <table class="table table-striped table-sm mt-4 mb-4">
      <tr>
        <th><%= t('.name') %></th>
        <th><%= t('.image') %></th>
        <th><%= t('.rule') %></th>
        <th><%= t('.rule_value') %></th>
        <th colspan="3"><%= t('.actions') %></th>
      </tr>

      <%= render @badges %>
    </table>
  </div>
</div>
