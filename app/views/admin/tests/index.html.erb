<div class="row justify-content-center mt-3">
  <div class="col col-md-8">
    <h1 class="text-center "><%= t('.header') %></h1>
    <p>
      <%= link_to t('.new_test'), new_admin_test_path %> |
      <%= link_to t('.badge'), admin_badges_path %> |
    </p>

    <%= render 'shared/errors', resource: @test %>

    <table class="table table-striped table-sm mt-4 mb-4">
      <tr>
        <th class="sort-by-title pointer">
          <%= t('.title') %>
          <%= octicon 'arrow-up', class: 'text-success hide' %>
          <%= octicon 'arrow-down', class: 'text-success hide' %>
        </th>
        <th><%= t('.level') %></th>
        <th><%= t('.questions') %></th>
        <th><%= t('.timer') %></th>
        <th colspan="3"><%= t('.actions') %></th>
      </tr>

      <%= render @tests %>
    </table>
  </div>
</div>
