<p>
  <strong>Title:</strong>
  <%= @test.title %>
</p>

<p>
  <strong>Level:</strong>
  <%= @test.level %>
</p>

<p>
  <%= link_to 'New question', new_admin_test_question_path(@test) %>
</p>

<%= link_to 'Edit', edit_admin_test_path(@test) %>
<%= link_to 'Back', admin_tests_path %>

<p>
  <table>
    <tr>
      <th>Questions</th>
      <th colspan="3">Actions</th>
    </tr>
    <% @test.questions.each do |test| %>
    <tr>
      <td><%= test.body%></td>
      <td><%= link_to 'Show', admin_question_path(test) %></td>
      <td><%= link_to 'Edit', edit_admin_question_path(test) %></td>
      <td>
        <%= link_to 'Delete',
                    question_path(test),
                    method: :delete,
                    data: { confirm: 'Are you sure?' }%>
      </td>
    </tr>
    <% end %>
  </table>
</p>

