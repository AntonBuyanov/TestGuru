<div class="row justify-content-center mt-3">
  <div class="col col-md-8">
    <p>
      <strong><%= t('.title') %></strong>
      <%= @test.title %>
    </p>

    <p>
      <strong><%= t('.level') %></strong>
      <%= @test.level %>
    </p>

    <p>
      <%= link_to t('.new_question'), new_admin_test_question_path(@test) %>
    </p>

    <%= link_to t('admin.tests.test.edit'), edit_admin_test_path(@test) %>
    <%= link_to t('.back'), admin_tests_path %>

    <p>
      <table class="table table-striped table-sm">
        <tr>
          <th><%= t('.questions') %></th>
          <th colspan="3"><%= t('.actions') %></th>
        </tr>
        <% @test.questions.each do |test| %>
        <tr>
          <td><%= test.body %></td>
          <td><%= link_to t('.show'), admin_question_path(test), class: 'btn btn-outline-primary btn-sm' %></td>
          <td><%= link_to t('.edit'), edit_admin_question_path(test), class: 'btn btn-outline-primary btn-sm' %></td>
          <td>
            <%= link_to t('.delete'),
                        admin_question_path(test), class: 'btn btn-outline-primary btn-sm',
                        method: :delete,
                        data: { confirm: t('.sure') }%>
          </td>
        </tr>
        <% end %>
      </table>
    </p>
  </div>
</div>
